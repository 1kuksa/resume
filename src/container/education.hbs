<div class="p-2">
    {{#with main}}
    <main>
        <section>
            <div class="row">
                <div class="card">
                    <div class="card-header">
                        {{> title data='My educationss' big=true}}
                    </div>
                    <div class="card-body">

                        <ul>
                            {{#each educations}}
                            <li>{{name}}
                                {{#unless isend}} <span
                                    class=" badge fs-6 text-bg-primary rounded-pill text-capitalize"> Ще в
                                    процесі!</span>{{/unless }}
                            </li>
                            {{/each}}

                        </ul>
                    </div>
                </div>
        </section>
        <section>
            <div class="row">
                <div class="card mt-3">
                    <div class="card-header">
                        {{> title data="My certificats" }}
                    </div>
                    <div class="card-body">


                        {{#each certificates}}
                        <li>{{name}}
                            <strong>- ID сертифікату ({{id}})</strong>
                        </li>
                        {{/each}}
                    </div>
                </div>
        </section>
    </main>

    {{/with}}
</div>