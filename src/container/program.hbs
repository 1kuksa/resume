<div class="p-2">
    {{#with program}}
    <main>
        {{#with excursion}}
        <div class="text-center">
            <h1>{{name}}</h1>
        </div>
        <section>

            <div class="text-center">
                {{#with location}}
                <address>location: {{city}}, {{country}}</address>
                {{/with}}

            </div>

            <div class="text-center">
                Date: {{date}}
            </div>


        </section>
        <hr class="mt-3 mb-3">
        <section>
            <div class="text-center">
                <h2>Program</h2>
            </div>
            <div>

                <div class="row">

                    <div class="col-3"></div>
                    <div class="card col-6 text-center">
                        {{#each program}}




                        <div class="card-header">
                            <em class="fs-3">{{name}}</em> - {{type}} (duration: {{duration}}h)
                        </div>
                        <div class="card-body">


                            <h3>Details:</h3>
                            {{#with details}}
                            {{#with museum}}
                            <div><em>Museum: {{name}}</em></div>
                            <div>

                                <address> Location: {{location.address}}, {{location.city}},
                                    {{location.country}}
                                </address>
                            </div>
                            <div>
                                <h4>Exhibits:</h4>

                                {{#each exhibits }}


                                <div><em>{{name}}</em> </div>
                                <div>
                                    {{artist}}
                                </div>
                                <p>{{description}}</p>
                                <div>
                                    {{#if audio_guide}}
                                    <strong>audio guide:</strong></br> <audio controls loop
                                        src="https://www.w3schools.com/tags/horse.ogg"></audio>
                                    {{/if}}
                                </div>



                                {{/each}}



                            </div>

                            {{/with}}


                            {{#with venue}}

                            <div><em>Venue: {{name}}</em></div>
                            <div>

                                <address> Location: {{location.address}}, {{location.city}},
                                    {{location.country}}
                                </address>
                            </div>


                            {{/with}}
                            <div>
                                {{#if performers}}
                                <h4>Performers:</h4>

                                {{#each performers}}


                                <div><em>{{name}}</em> /<strong> {{type}}</strong>
                                </div>


                                {{/each}}

                                {{/if}}
                            </div>
                            <h4>Guide:</h4>
                            <div>{{#with guide}}
                                <em>{{name}}</em>
                                language:{{language}}
                                <div> <strong>
                                        rating:{{rating}}</strong></div>
                                {{/with}}
                            </div>
                            {{/with}}
                        </div>

                        {{/each}}
                    </div>


                </div>
        </section>

        {{/with}}
    </main>
    {{/with}}
</div>