<body>
    <header class="pt-5 pb-5">
        {{#with header}}
        <div class="row">
            <h1 class="col-9">{{title}}</h1>
            {{#with button}}
            <a href="{{href}}" class="btn btn-outline-secondary col-3 pt-3 pe-2">{{text}}</a>
            {{/with}}

        </div>
        {{/with}}
    </header>
    <hr class="mt-5 mb-5">
    <section>
        {{> cardGoodsItem}}

    </section>
    <hr class="mt-5 mb-5">
    <section>
        <div class="p-2">
            {{#with total}}
            <div class="row">
                <div class="col-8">
                    <h2>
                        {{title}}
                    </h2>
                    <div class="display-6 mt-3 mb-3"> <strong> {{amount}}</strong>

                    </div>
                    <div>
                        {{delivery}}
                    </div>
                </div>
                <div class="col-4">
                    {{#each buttons}}
                    <div class="mt-2 mb-3">{{#if isSuccess}}
                        <a href="{{link}}" class="btn btn-success">{{text}}</a>
                        {{/if}}
                    </div>
                    <div class="mt-3 mb-2">{{#if isOutline}}
                        <a href="{{link}}" class="btn btn-outline-success">{{text}}</a>
                        {{/if}}
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/with}}
        </div>
    </section>
    <hr class="mt-5 mb-5">
    {{#with goodsOtherBlock}}
    <h2 class="text-center">{{title}}</h2>
    <div class="row gy-3 gx-2">
        {{> shopcard}}
        {{/with}}
    </div>
    <hr class="mt-5 mb-5">
    <section>
        <div class="card bg-dark">
            <div class="d-flex  justify-content-center py-3  ">
                {{#with subscribe}}

                <div class="text-white ps-2 mb-3 mb-md-0 me-md-auto ">
                    <h2>{{header}} </h2>
                    <p>{{description}}</p>
                </div>


                <ul class="nav py-3 mb-2 ">
                    {{#each buttons}}

                    <li class="nav-item p-2">

                        <button href="{{link}}" class="btn btn-primary ">{{text}}</button>
                    </li>

                    {{/each}}

                </ul>
                {{/with}}


            </div>
        </div>
    </section>
    <hr class="mt-5 mb-5">
</body>