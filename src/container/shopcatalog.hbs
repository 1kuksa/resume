<body>
    {{> breadcrumb}}
    <header class="mt-3 mb-5">
        <h1>{{header}}</h1>
    </header>
    <section>
        <div class="col-12 row mb-5">{{#each sortBlock}}

            <div class="col-3">
                <div class="row gt-2">

                    <div>
                        <select class="form-select">
                            <option selected>{{placeholder}}</option>
                            {{#each options}}
                            <option value="{{value}}">{{text}}</option>
                            {{/each}}

                        </select>
                    </div>


                </div>
            </div>
            {{/each}}
        </div>
    </section>
    <section class="mb-5">
        <div class="row ">
            <div class="col-4">
                <div class=" card">
                    <div class="p-2">
                        {{#with filterBlock}}
                        {{#with sellers}}
                        <div class="p-2">
                            <strong>{{title}}</strong>
                        </div>
                        {{#each list}}
                        <div class="from-check pt-2 pb-1">

                            <input name="food" type="checkbox" class="form-check-input">
                            <label class="form-check-label">{{value}} </label>

                        </div>

                        {{/each}}
                        {{/with}}
                        <hr class="m-2">
                        {{#with brands}}
                        <div class="p-2">
                            <strong>{{title}}</strong>
                        </div>
                        <div class="mb-2">
                            <input class="form control" placeholder="{{input.placeholder}}">
                        </div>
                        <div>
                            {{#each options}}
                            <div class="from-check pt-2 pb-1">

                                <input name="food" type="checkbox" class="form-check-input">
                                <label class="form-check-label">{{value}} </label>

                            </div>
                            {{/each}}
                        </div>
                        {{/with}}
                        <hr class="m-2">
                        <div>
                            {{#with price}}
                            <div class="p-2">
                                <strong>{{title}}</strong>
                            </div>
                            <div class="row gy-2 gs-2">

                                <div class="col-4 m-2">
                                    <input class="form control p-1" placeholder="{{range.from}}">
                                </div>
                                <div class="col-4 m-2">
                                    <input class="form control p-1" placeholder="{{range.to}}">
                                </div>
                                <div class=" col-2 m-2">
                                    <a href="{{button.link}}" class="btn btn-outline-danger">{{button.text}}</a>
                                </div>
                            </div>
                            {{/with}}
                        </div>
                        <hr class="m-2">
                        {{#each filterList}}
                        <div class="p-2">
                            <strong>{{title}}</strong>
                        </div>
                        {{#each options}}
                        <div class="from-check pt-2 pb-1">

                            <input name="food" type="checkbox" class="form-check-input">
                            <label class="form-check-label">{{value}} </label>

                        </div>

                        {{/each}}
                        {{#if @last}}
                        {{else}}
                        <hr class="m-2">
                        {{/if}}
                        {{/each}}

                        {{/with}}
                    </div>
                </div>
            </div>
            <div class="col-8">
                <div class="row row-cols-1 row-cols-md-2 g-4">
                    {{> catalogItem}}
                </div>
            </div>

        </div>
    </section>
    {{> shopaction}}
</body>