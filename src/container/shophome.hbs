<main class="p-2">

    <section class="mt-5">
        {{#with newsBlock}}
        <h2 class="text-center">{{title}}</h2>
        <div class="row gy-3 gx-2">
            {{> shoppost}}
        </div>
        {{/with}}

    </section>
    <hr class="m-5">
    <section>
        {{#with goodsBlock}}
        <ul class="nav nav-tabs mb-5">
            {{#each tabs}}

            <li class="nav-item">

                <a href="#"
                    class="nav-link {{#if isActive}} active {{/if}} {{#if isDisabled}} disabled {{/if}}">{{text}}</a>




            </li>

            </div>
            {{/each}}
        </ul>

        {{> shopcard}}
        {{/with}}

    </section>
    <hr class="m-5">
    {{> shopsubscribe}}

    <hr class="m-5">
    {{> shopaction}}


</main>