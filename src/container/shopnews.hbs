<body class="p-2">
    {{> breadcrump}}
    <section>
        <div class="row ">
            {{#with newsData}}
            <div class="col-12">
                <div class="card ">
                    <img class="card-img-top" src={{photo}} alt="photo">
                </div>
            </div>
            {{#with head}}
            <h1 class="mt-3">{{heading}}</h1>
            <p>{{description}}</p>
            {{/with}}
            {{#each body}}
            <h3 class="mt-2">{{title}}</h3>
            <p>{{text}}</p>
            {{/each}}
            {{/with}}
        </div>
    </section>
    <hr class="m-5">
    <section>
        {{#with newsOtherBlock}}
        <h2 class="text-center">{{title}}</h2>
        <div class="row gy-3 gx-2">
            {{> shoppost}}


            {{/with}}
    </section>
    <hr class="m-5">
    {{> shopaction}}

    <hr class="m-5">

</body>