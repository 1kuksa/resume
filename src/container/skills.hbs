{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="p-2">
    {{#with main}}
    <main>
        <section>
            <div class="row">
                <div class="card">
                    <div class="card-header">
                        {{> title data='All skills' big=true}}
                    </div>
                    <div class="card-body">
                        <ul>
                            {{#each skills}}
                            <li>
                                {{name}}
                                {{#if point includeZero=true}} -- ({{point}}) {{/if}}
                                {{#if isTop}} <span class=" badge fs-6 text-bg-warning rounded-pill text-uppercase">
                                    TOP!</span> {{/if}}
                                {{#unless point includeZero=true }} <span
                                    class=" badge fs-6 text-bg-danger rounded-pill text-capitalize"> He
                                    вивчаємо!</span>{{/unless}}
                                {{#unless point }}
                                {{#if point includeZero=true}}
                                <span class=" badge fs-6 text-bg-primary rounded-pill text-capitalize"> Зараз
                                    вивчаємо!</span>
                                {{/if}}
                                {{/unless}}
                            </li>
                            {{/each}}

                        </ul>
                    </div>
                </div>
            </div>
        </section>
        <section>
            <div class="row">
                <div class="card mt-3 ">
                    <div class="card-header">
                        {{> title data='My hobbies'}}
                    </div>
                    <div class="card-body">

                        <ol>
                            {{#each hobbies}}

                            <li>
                                {{name}}
                                {{#if isMain}}<span class=" badge fs-6 text-bg-warning rounded-pill text-uppercase">
                                    favorite!</span> {{/if}}
                            </li>
                            {{/each}}
                        </ol>
                    </div>
                </div>
        </section>
    </main>

    {{/with}}

</div>

